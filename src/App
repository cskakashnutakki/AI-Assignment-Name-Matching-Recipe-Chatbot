import React, { useState } from 'react';
import { Search, MessageSquare, Github, FileText } from 'lucide-react';
import NameMatcher from './components/NameMatcher';
import RecipeChatbot from './components/RecipeChatbot';

type Tab = 'name-matcher' | 'recipe-chatbot';

function App() {
  const [activeTab, setActiveTab] = useState<Tab>('name-matcher');

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
      <div className="container mx-auto px-4 py-8">
        <header className="text-center mb-8">
          <div className="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-500 text-white rounded-full mb-4">
            <Github className="h-8 w-8" />
          </div>
          <h1 className="text-4xl font-bold text-gray-900 mb-2">AI Assignment Suite</h1>
          <p className="text-xl text-gray-600">Advanced Name Matching & Recipe Chatbot System</p>
        </header>

        <div className="bg-white rounded-xl shadow-lg mb-6">
          <div className="border-b">
            <nav className="flex">
              <button
                onClick={() => setActiveTab('name-matcher')}
                className={`flex-1 px-6 py-4 text-center font-medium transition-all duration-200 ${
                  activeTab === 'name-matcher'
                    ? 'text-blue-600 border-b-2 border-blue-600 bg-blue-50'
                    : 'text-gray-500 hover:text-gray-700 hover:bg-gray-50'
                }`}
              >
                <Search className="h-5 w-5 mx-auto mb-1" />
                Task 1: Name Matching
              </button>
              <button
                onClick={() => setActiveTab('recipe-chatbot')}
                className={`flex-1 px-6 py-4 text-center font-medium transition-all duration-200 ${
                  activeTab === 'recipe-chatbot'
                    ? 'text-emerald-600 border-b-2 border-emerald-600 bg-emerald-50'
                    : 'text-gray-500 hover:text-gray-700 hover:bg-gray-50'
                }`}
              >
                <MessageSquare className="h-5 w-5 mx-auto mb-1" />
                Task 2: Recipe Chatbot
              </button>
            </nav>
          </div>
          
          <div className="p-8">
            {activeTab === 'name-matcher' && <NameMatcher />}
            {activeTab === 'recipe-chatbot' && <RecipeChatbot />}
          </div>
        </div>

        <footer className="text-center">
          <div className="bg-white rounded-xl shadow-lg p-6">
            <div className="flex items-center justify-center mb-3">
              <FileText className="h-5 w-5 text-gray-500 mr-2" />
              <span className="text-gray-700 font-medium">Project Documentation</span>
            </div>
            <p className="text-gray-600 text-sm mb-2">
              Complete implementation of AI assignment tasks with production-ready code
            </p>
            <div className="flex items-center justify-center space-x-4 text-xs text-gray-500">
              <span>• Fuzzy Name Matching Algorithm</span>
              <span>• Recipe Recommendation Engine</span>
              <span>• Full Source Code Included</span>
            </div>
          </div>
        </footer>
      </div>
    </div>
  );
}

export default App;
